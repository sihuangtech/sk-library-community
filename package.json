{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build && node scripts/copy-config.js",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "start": "cross-env PORT=3008 HOST=127.0.0.1 node .output/server/index.mjs",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "config:update": "node scripts/update-prisma-config.mjs",
    "config:validate": "node -e \"console.log('配置验证:', JSON.stringify(require('./utils/config.ts').loadConfig(), null, 2))\"",
    "db:init": "node scripts/init-database.mjs",
    "db:reset": "npx prisma migrate reset --force",
    "db:studio": "npx prisma studio"
  },
  "dependencies": {
    "@nuxt/eslint": "^1.5.2",
    "@nuxt/icon": "^1.15.0",
    "@nuxt/image": "^1.10.0",
    "@nuxt/scripts": "^0.11.9",
    "@nuxt/test-utils": "^3.19.2",
    "@prisma/client": "^6.11.1",
    "@types/js-yaml": "^4.0.9",
    "@types/sortablejs": "^1.15.8",
    "@unhead/vue": "^2.0.12",
    "@vue/compiler-sfc": "^3.5.17",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "js-yaml": "^4.1.0",
    "nuxt": "^3.17.6",
    "prisma": "^6.11.1",
    "sortablejs": "^1.15.6",
    "typescript": "^5.8.3",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "vitest": "^3.2.4"
  }
}
